<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".ui.sign.signUp.SignUpActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_f_name_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeFourth"
                    android:src="@drawable/ic_baseline_person_24"
                    android:tint="@color/colorWhite" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_f_name_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeThird"
                    android:backgroundTintMode="screen"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="First Name"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_l_name_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFC107"
                    android:src="@drawable/ic_baseline_person_24"
                    android:tint="#FFFFFF" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_l_name_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeThird"
                    android:backgroundTintMode="screen"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Last Name"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_email_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFC107"
                    android:src="@drawable/ic_baseline_alternate_email_24"
                    android:tint="#FFFFFF" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeThird"
                    android:backgroundTintMode="screen"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="E-MAIL"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_password_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeFourth"
                    android:src="@drawable/ic_baseline_lock_24"
                    android:tint="@color/colorWhite" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorGray"
                    app:boxStrokeColor="@color/orangeThird"
                    app:hintTextColor="@color/orangeThird"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTintMode="screen"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="PASSSWORD"
                        android:inputType="textPassword"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorGray"
                        app:hintTextColor="@color/orangeThird"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:passwordToggleEnabled="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_gender_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFC107"
                    android:src="@drawable/ic_gender"
                    android:tint="#FFFFFF" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gender_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orangeThird"
                    android:backgroundTintMode="screen"
                    android:digits="01"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Gender (L/P)"
                    android:inputType="textCapSentences|text"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orangeSecond"
        android:textColor="@color/colorWhite"
        android:text="NEXT"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>