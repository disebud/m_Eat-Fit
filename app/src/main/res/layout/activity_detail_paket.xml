<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_flat"
    tools:context=".ui.order.DetailPaketActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/title_name_paket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="NAMA PAKET"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ln_iv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/orangeThird"
        app:layout_constraintTop_toBottomOf="@+id/title_name_paket">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_poster"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="top"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:srcCompat="@drawable/ic_poster"
            tools:layout_editor_absoluteX="106dp">

            <ImageView
                android:id="@+id/iv_poster_image_detail_packet"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="7"
            android:id="@+id/ln_in_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@color/orangeThird">

            <TextView
                android:id="@+id/idr_harga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="inherit"
                android:text="Harga"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/idr_packet_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="10dp"
                android:textAlignment="inherit"
                android:text="Rp.0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/porsi_packet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="10dp"
                android:text="/ 50 Porsi"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_scrool"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ln_iv_menu">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/orangeThird">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/order_packet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORDER"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="10dp"
                        android:textSize="20dp"
                        app:backgroundTint="@color/orangeMain"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_desc_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeFourth"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ln_scrool">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Description "
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorBlack"></View>

                </LinearLayout>

                <TextView
                    android:id="@+id/desc_packet"
                    android:background="@color/orangeThird"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    android:text="Kami menyediakan 7 jenis hidangan dalam paket ulang tahun. \nDengan jumlah porsi minimal pemesanan yakni 50 porsi. Anda dapat melihat total Takaran AKG yang terkandung dalam paket ini. \nTakaran AKG tersebut dihitung dari setiap 1 porsi hidangan yang tertera dalam daftar. Harga yang tertera untuk 50 porsi"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/title_menu_paket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangeFourth"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ln_scrool">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Menu "
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorBlack"></View>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_paket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_menu_paket"
        tools:listitem="@layout/row_detail_paket" />
</androidx.constraintlayout.widget.ConstraintLayout>