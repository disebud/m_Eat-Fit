<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/order_flat"
tools:context=".wallet.TopUpActivity">

<ImageView
    android:id="@+id/back_topup_settingsr"
    android:layout_width="52dp"
    android:layout_height="49dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:src="@drawable/back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/back" />


<TextView
    android:id="@+id/title_topUp_wallet"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center"
    android:text="TOP UP"
    android:textColor="@color/colorBlack"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/idr_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center"
    android:text="@string/idr_500_000"
    android:textColor="@color/orangeThird"
    android:textSize="25sp"
    app:layout_constraintBottom_toTopOf="@+id/note_available"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title_topUp_wallet" />


<TextView
    android:id="@+id/note_available"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_regular"
    android:gravity="center"
    android:text="Available Balance"
    android:textColor="@color/colorBlack"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/idr_balance" />

<TextView
    android:id="@+id/custom_amount"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center"
    android:text="Custom Amount"
    android:textColor="@color/colorBlack"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/note_available" />

    <TextView
        android:id="@+id/quick_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="quick options :"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_amount" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/orangeThird"
        android:ems="10"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_amount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quick_options">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_10k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n10.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginRight="18dp"
                android:textColor="@color/orangeSecond" />

            <TextView
                android:id="@+id/tv_20k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n20.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:textColor="@color/orangeSecond" />

            <TextView
                android:id="@+id/tv_30k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n30.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/orangeSecond" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_40k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n40.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginRight="18dp"
                android:textColor="@color/orangeSecond" />

            <TextView
                android:id="@+id/tv_50k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n50.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:textColor="@color/orangeSecond" />

            <TextView
                android:id="@+id/tv_60k"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape_line_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IDR\n60.000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/orangeSecond" />
        </LinearLayout>
    </LinearLayout>




<com.google.android.material.button.MaterialButton
    android:id="@+id/btn_top_up2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:backgroundTint="@color/orangeSecond"
    android:fontFamily="@font/poppins_regular"
    android:text="TOP UP NOW"
    android:textColor="@color/colorWhite"
    android:textSize="18sp"
    android:textStyle="bold"
    app:cornerRadius="20dp"
    app:layout_constraintBottom_toTopOf="@+id/btn_cancel_order"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<com.google.android.material.button.MaterialButton
    android:id="@+id/btn_cancel_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/orangeFourth"
    android:fontFamily="@font/poppins_regular"
    android:text="cancel"
    android:visibility="invisible"
    android:textColor="@color/colorWhite"
    android:textSize="18sp"
    android:textStyle="bold"
    app:cornerRadius="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>